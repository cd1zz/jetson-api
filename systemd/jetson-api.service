[Unit]
Description=Jetson LLM API Service (with Dashboard)
After=network.target llama-deepseek.service llama-qwen.service llama-minicpm-v.service llama-qwen2.5-vl.service
Wants=llama-deepseek.service llama-qwen.service llama-minicpm-v.service llama-qwen2.5-vl.service

[Service]
Type=simple
User=%USER%
WorkingDirectory=%HOME%/jetson-api
Environment="PATH=%HOME%/jetsonllm/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=%HOME%/jetsonllm/bin/uvicorn app.main:app \
    --host 0.0.0.0 \
    --port 9000 \
    --workers 1 \
    --log-level info
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
